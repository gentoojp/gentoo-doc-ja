"default 0\n"
"timeout 30\n"
"splashimage=(hd0,0)/boot/grub/splash.xpm.gz\n"
"\n"
"title Gentoo Linux <keyval id=\"kernel-version\"/>\n"
"root (hd0,0)\n"
"kernel /boot/<keyval id=\"genkernel-name\"/> root=/dev/ram0 real_root=/dev/sda3\n"

"1\n"
"\n"
"[TITLE]\n"
"Boot Menu\n"
"\n"
"[SETTINGS]\n"
"AbortOnKey = false\n"
"Timeout    = 9\n"
"Default    = 1\n"
"\n"
"[SECTION]\n"
"Local HD -> Morphos      (Normal)\n"
"ide:0 boot2.img ramdebug edebugflags=\"logkprintf\"\n"
"\n"
"[SECTION]\n"

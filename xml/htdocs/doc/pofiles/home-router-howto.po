"}\n"
"# <i>nano /etc/conf.d/dhcpd</i>\n"
"<comment>(Set IFACE=\"eth0\")</comment>\n"
"# <i>rc-update add dhcpd default</i>\n"
"# <i>/etc/init.d/dhcpd start</i>\n"
msgstr ""
"# <i>emerge dhcp</i>\n"
"# <i>nano /etc/dhcp/dhcpd.conf</i>\n"
